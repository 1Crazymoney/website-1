section
  &:first-child
    margin-top: 80px
  &:after
    content: ""
    display: block
    width: 50px
    height: 3px
    border-radius: 3px
    background: $brand-teal
    display: block
    margin: 80px auto

  &:last-child:after
    display: none

.how-item
  margin: 10px 0
  padding: 10px 0
  vertical-align: middle

  img
    width: 180px
    height: 100px
    background-color: $brand-blue
    border-radius: 100px
    outline: 0

  h5
    vertical-align: bottom
