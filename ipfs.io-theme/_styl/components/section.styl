section
  padding-top: 80px
  &:after
    content: ""
    display: block
    width: 50px
    height: 3px
    border-radius: 3px
    background: $brand-teal
    display: block
    margin: 80px auto 0 auto
  &:last-child:after
    display: none

.how-item
  margin: 10px 0
  padding: 10px 0

.how-illo img
  width: 100%
  height: 300px
  background-color: #fafafa
  outline: 0

.how-description
  height: 300px
  padding-top: 150px

@media screen and (max-width: $breakpoint-tablet)

  .how-description
    height: auto
    padding-top: 10px
