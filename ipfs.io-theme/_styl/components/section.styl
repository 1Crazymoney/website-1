section
  padding-top: 80px
  &:after
    content: ""
    display: block
    width: 50px
    height: 3px
    border-radius: 3px
    background: $brand-teal
    display: block
    margin: 80px auto 0 auto
  &:last-child:after
    display: none

.how-illo img
  width: 100%
  height: 300px
  background-color: #fafafa
  outline: 0

@media screen and (min-width: $breakpoint-mid-mobile + 1)

  .how-item
    padding: 20px 0

@media screen and (max-width: $breakpoint-tablet)

  section:first-of-type
    padding-top: 20px

@media screen and (min-width: $breakpoint-tablet + 1)

  .how-description
    height: 300px
    padding-top: 150px

  .service-providers
    position: relative
    top: 100px
