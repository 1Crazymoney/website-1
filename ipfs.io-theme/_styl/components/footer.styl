--------------------------------------------------------------------*/

.footer-primary
  padding: 50px 0 20px
  background: $brand-blue no-repeat center center
  background-image: url(/theme/images/footer-stars.png),
                    url(/theme/images/footer-bg.png)
  background-size: 1700px 400px, cover
  color: white
  margin-top: 60px

  .grid-flex-container
    margin-bottom: 0

  .copyright
    margin: 95px 0 0

.sitemap-menu
  max-width: 430px
  width: 60%
  float: left

ul.sitemap

  li
    font-weight: 200
    font-style: normal

  li.sitemap-head
    font-weight: 400
    font-style: normal
    text-transform: uppercase
    letter-spacing: 1px

.share-links
  width: 40%
  float: right
  text-align: right

  li
    display: inline-block

  a
    width: 30px
    height: @width
    margin-left: 20px
    display: inline-block
    background: transparent no-repeat
    background-size: contain
    text-indent: 9999em

    &.Twitter
      background-image: url(/theme/images/icon-social-twitter.svg)
    &.Facebook
      background-image: url(/theme/images/icon-social-facebook.svg)
    &.Google
      background-image: url(/theme/images/icon-social-google.svg)