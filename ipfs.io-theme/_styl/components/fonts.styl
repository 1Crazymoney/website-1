.wf-inactive
  h1, h2, h3, h4, h5, h6, p, li, a
    opacity: 1

.wf-loading
  h1, h2, h3, h4, h5, h6, p, li, a, .divider
    opacity: 0
    transition: .1s opacity

.wf-active
  h1, h2, h3, h4, h5, h6, p, li, a
    opacity: 1
    transition: .1s opacity
.wf-active
  .hero-home
    h2, .divider, h3
      transition: 2s opacity
    .divider
      transition-delay: .5s
    h3
      transition-delay: 1s
