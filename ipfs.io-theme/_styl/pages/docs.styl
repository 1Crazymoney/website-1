.docs-menu
  vertical-align: top
  display: inline-block
  box-sizing: border-box
  width: 30%
  margin: 0
  padding: 0
  li
    padding: 0
    margin: 0
    list-style: none
  a.current-item
    text-transform: uppercase
    font-weight: 400

.docs-menu + .content-wrapper
  vertical-align: top
  display: inline-block
  box-sizing: border-box
  width: 69%


@media (max-width: 970px)

  .docs-menu
    margin-bottom: 40px

  .docs-menu, .docs-menu + .content-wrapper
    display: block
    width: 100%